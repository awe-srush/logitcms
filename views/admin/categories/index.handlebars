
<div class="row">


  <div class="col-sm-4">
      <h2>Create Categories</h2>
    <form class="" action="/admin/categories/create" method="post">
      <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" name="name" placeholder="Enter name" class="form-control">
      </div>
      <button type="Submit" name="button" class="btn btn-primary">Create Category</button>
    </form>
  </div>



  <div class="col-sm-8">
    <h2>Categories</h2>
    <table class="table">
      <thead>
        <th>Id</th>
        <th>Name</th>

      </thead>
      <tbody>
        {{#each categories}}
        <tr>
          <td>{{id}}</td>
          <td>{{name}}</td>
          <td> <a href="/admin/categories/edit/{{id}}" class="btn btn-info">Edit</a>

          </td>
          <td>
            <form action="/admin/categories/{{id}}?_method=DELETE" method="post">
              <button class="btn btn-danger" name="button">Delete</button>
            </form>
          </td>

        </tr>
        {{/each}}
      </tbody>
    </table>

  </div>

</div>
